{
  "name": "@mattilsynet/designsystem",
  "version": "0.15.1",
  "description": "Design system for Mattilsynet",
  "main": "index.js",
  "private": false,
  "homepage": "https://mattilsynet.github.io/designsystem",
  "scripts": {
    "tokens": "a11y-color-tokens --outputDirPath='src/scss' --colorTokensPath='src/scss/utilities/colors.js'",
    "watch:sass": "sass --no-source-map --watch src/scss:./dist",
    "build:sass": "sass --no-source-map src/scss:./dist ",
    "test": "jest --env=jsdom",
    "test:watch": "npm run test -- --watch",
    "storybook": "start-storybook -p 6006",
    "start": "npm-run-all tokens build:sass --parallel watch:*",
    "build": "npm-run-all tokens build:sass",
    "build-storybook": "build-storybook",
    "format": "prettier --write '{src,stories}/**/*{.ts,.svelte}'",
    "lint": "eslint --fix --quiet --ext .js,.svelte,.ts '{src,stories}/**/*{.ts,.svelte}'",
    "lint-style": "stylelint src/scss/**/*.scss src/scss/**/**/*.scss src/scss/**/**/**/*.scss",
    "lint-style:fix": "npm run lint-style --fix",
    "prepublishOnly": "npm run lint && npm run build",
    "predeploy": "npm run build-storybook",
    "deploy-storybook": "gh-pages -d storybook-static",
    "percy": "percy storybook http://localhost:6006"
  },
  "keywords": [
    "Design system",
    "Mattilsynet",
    "Svelte",
    "Storybook",
    "xstate"
  ],
  "author": "Mattilsynet<matsdrift@mattilsynet.no>",
  "license": "MIT",
  "devDependencies": {
    "@percy/cli": "^1.14.0",
    "@percy/storybook": "^4.3.5",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-svelte-csf": "^2.0.10",
    "@storybook/addons": "^6.5.16",
    "@storybook/svelte": "^6.5.16",
    "@storybook/theming": "^6.5.16",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.2",
    "@types/jest": "^29.4.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.50.0",
    "@xstate/inspect": "^0.7.0",
    "a11y-color-tokens": "^0.6.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-svelte": "^2.8.0",
    "sass": "^1.58.2",
    "storybook-xstate-addon": "2.3.4",
    "stylelint": "^15.4.0",
    "stylelint-config-standard": "^32.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^4.6.0",
    "svelte": "^3.55.1",
    "svelte-jester": "^2.3.2",
    "svelte-loader": "^3.1.6",
    "svelte-preprocess": "^5.0.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "@xstate/svelte": "^2.0.1",
    "gh-pages": "^5.0.0",
    "xstate": "^4.37.1"
  }
}
